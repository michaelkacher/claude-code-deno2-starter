{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "shared/**/*.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".fresh",
    "_fresh"
  ],
  "test": {
    "include": [
      "tests/unit/**/*.test.ts",
      "tests/integration/**/*.test.ts"
    ],
    "exclude": [
      "tests/manual/**/*"
    ]
  },
  "tasks": {
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:unit": "deno test tests/unit --allow-read --allow-write --allow-env --unstable-kv",
    "test:integration": "deno test tests/integration --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:watch": "deno test --watch --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:coverage": "deno test --coverage=coverage --allow-read --allow-write --allow-env --allow-net --unstable-kv",
    "test:coverage:report": "deno coverage coverage --lcov > coverage.lcov"
  },
  "imports": {
    "@/": "./",
    "@shared/": "./shared/",
    "@frontend/": "./frontend/",
    "@tests/": "./tests/",
    "std/": "https://deno.land/std@0.208.0/",
    "fresh/": "https://deno.land/x/fresh@1.7.3/",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "preact-render-to-string": "https://esm.sh/*preact-render-to-string@6.5.4",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "twind/": "https://esm.sh/@twind/core@1.1.3/",
    "tailwindcss/": "npm:tailwindcss@3.4.1/",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "camelcase",
        "explicit-function-return-type",
        "no-await-in-loop",
        "no-throw-literal"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".fresh",
      "_fresh",
      "coverage"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "exclude": [
      "node_modules",
      "dist",
      "build",
      ".fresh",
      "_fresh",
      "coverage"
    ]
  },
  "unstable": [
    "kv",
    "cron",
    "worker-options"
  ]
}
