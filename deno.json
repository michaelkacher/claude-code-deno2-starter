{
  "name": "@your-org/web-project-starter",
  "version": "0.1.0",
  "exports": "./frontend/main.ts",
  "tasks": {
    "dev": "cd frontend && deno task start",
    "start": "cd frontend && deno task start",
    "build": "cd frontend && deno task build",
    "preview": "cd frontend && deno task preview",
    "deploy": "deployctl deploy --project=your-project-name --prod --entrypoint=frontend/main.ts",
    "test": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv",
    "test:watch": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv --watch",
    "test:coverage": "deno test --allow-read --allow-env --allow-net --allow-write --unstable-kv --coverage=coverage",
    "coverage": "deno coverage coverage --lcov --output=coverage.lcov",
    "check": "deno task lint && deno task fmt:check && deno task type-check",
    "lint": "deno lint",
    "lint:fix": "deno lint --fix",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check",
    "type-check": "deno check shared/lib/**/*.ts shared/repositories/**/*.ts shared/services/**/*.ts shared/workers/**/*.ts shared/types/**/*.ts && cd frontend && deno check main.ts",
    "clean": "rm -rf dist coverage .fresh frontend/_fresh",
    "kv:seed": "deno run --allow-read --allow-write --allow-env scripts/seed-local-kv.ts",
    "kv:reset": "deno run --allow-read --allow-write scripts/reset-local-kv.ts",
    "kv:inspect": "deno run --allow-read --allow-write --allow-env scripts/inspect-local-kv.ts",
    "kv:seed-user": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/seed-test-user.ts",
    "kill-ports": "deno run --allow-run scripts/kill-ports.ts",
    "reset-rate-limits": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/reset-rate-limits.ts",
    "users:list": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/list-users.ts",
    "users:make-admin": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/make-admin.ts",
    "test-notifications": "deno run --unstable-kv --allow-read --allow-write --allow-env scripts/quick-test-notifications.ts"
  },
  "deploy": {
    "project": "your-project-name",
    "entrypoint": "frontend/main.ts",
    "exclude": [
      "dist",
      "coverage",
      ".fresh",
      "frontend/_fresh",
      "tests",
      ".git"
    ]
  },
  "imports": {
    "@/": "./shared/",
    "@std/": "jsr:@std@^1.0.0/",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "$std/dotenv/mod.ts": "https://deno.land/std@0.216.0/dotenv/mod.ts",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1",
    "zod": "https://deno.land/x/zod@v3.22.4/mod.ts",
    "playwright/test": "npm:@playwright/test@^1.48"
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["deno.window", "dom", "dom.iterable"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": [
        "ban-untagged-todo",
        "no-throw-literal",
        "no-const-assign",
        "no-debugger",
        "no-duplicate-case",
        "no-empty",
        "no-empty-character-class",
        "no-empty-pattern",
        "no-ex-assign",
        "no-explicit-any",
        "no-fallthrough",
        "no-invalid-regexp",
        "no-irregular-whitespace",
        "no-prototype-builtins",
        "no-self-assign",
        "no-sparse-arrays",
        "no-unreachable",
        "no-unsafe-finally",
        "use-isnan",
        "valid-typeof",
        "jsx-button-has-type"
      ],
      "exclude": [
        "no-unused-vars",
        "require-await",
        "no-await-in-loop",
        "no-window"
      ]
    },
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "test": {
    "include": [
      "shared/**/*_test.ts",
      "shared/**/*.test.ts",
      "tests/**/*.test.ts"
    ],
    "exclude": [
      "dist",
      "coverage"
    ]
  },
  "exclude": [
    "dist",
    "coverage"
  ],
  "lock": true
}
